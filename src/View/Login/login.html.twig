{% extends 'layout.html.twig' %}
{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/login.css">
{% endblock %}
{% block content %}
	<div class="container">
		<form method="POST" action="">
			{% if errors is not empty %}
				<div class="alert alert-danger">
					{% for error in errors %}
						<p>{{ error }}</p>
					{% endfor %}
				</div>
			{% endif %}
			<h1 class="d-flex justify-content-center mt-2 text-dark">Connexion</h1>
			<div class="mb-4">
				<label class="form-label text-dark" for="email">Email</label>
				<input class="form-control border-0" type="text" id="email" name="email">
			</div>
			<div class="mb-4">
				<label class="form-label text-dark" for="password">Mot de passe</label>
				<input class="form-control border-0" type="password" id="password" name="password">
			</div>
			<div class="d-flex justify-content-center">
				<button class="btn btn-primary bg-secondary border-0 p-3">S'identifier</button>
			</div>
		</form>
	</div>
{% endblock %}
