{% extends 'layout.html.twig' %}
{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/tips.css">
{% endblock %}
{% block content %}
	<div class="container-fluid d-flex justify-content-center align-items-center header">
		<h1 class="text-light">
			{% for tipCategory in tipCategories %}
				{% if id == tipCategory.id %}
					{{ tipCategory.name }}
				{% endif %}
			{% endfor %}
			{% if id is empty %}
				Astuces
			{% endif %}
		</h1>
	</div>
	<div class="container mt-3">
		<div class="row justify-content-center">
			{% for tipCategory in tipCategories %}
				<div class="col-lg-4 mt-1 categories">
					<a href='{{ tipCategory.link }}' class="btn btn-lg w-100 m-1 bg-primary">{{ tipCategory.name }}</a>
				</div>
			{% endfor %}
		</div>
	</div>
	<section>
		<div class="card-tip w-50 h-100 mx-auto bg-primary mt-3 p-2">
			<div class="d-flex justify-content-center">
				<h2 class="title-tip text-center text-light bg-secondary px-4 py-2 mt-3 mb-2">Astuce du mois</h2>
			</div>
			<img class="img-tip d-none d-md-block w-100 px-4 mt-2" src="{{monthlyTip.image}}" alt="{{monthlyTip.name}}">
			<div class="d-flex flex-column align-items-center mt-3">
				<h3 class="monthlyTitle ">{{monthlyTip.name}}</h3>
				<div class="textMonthly align-self-center py-4 px-4">{{monthlyTip.content}}
				</div>
			</div>
		</div>
	</section>
	<section>
		<div class="row mb-4 m-0">
			{% for tip in tips %}
				<div class="col-md-3 d-flex justify-content-around mt-4">
					<figure class="card h-100 w-75">
						<img src="{{ tip.image }}" class="card-img-top img-fluid h-50 px-1 pt-1 bg-primary" alt="{{ tip.name }}">
						<div class="card-body bg-primary">
							<h3 class="card-title text-dark my-4 d-flex justify-content-center">{{ tip.name }}</h3>
							<a href="/astuces/trucs-et-astuces/?id={{ tip.id }}" class="btn w-75 text-light bg-secondary position-absolute bottom-0 ms-4 mb-3">DÃ©couvrir</a>
						</figure>
					</div>
				{% endfor %}
			</section>
		{% endblock %}
