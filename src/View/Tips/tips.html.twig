{% extends 'layout.html.twig' %}
{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/tips.css">
{% endblock %}
{% block content %}

	<div class="container-fluid d-flex justify-content-center align-items-center header">
		<h1 class="text-light">Astuces</h1>
	</div>
	<section>
		<div class="container">
			<div class="row mt-3 d-flex flex-column align-items-center justify-content-center">
				<div class="monthlyTip p-0  bg-primary w-75 my-4">
					<h2 class="title my-4 d-flex justify-content-center">Astuce du mois</h2>
					<div class="monthlyText d-flex justify-content-center ms-4">
						<img class="img me-4 p-2 d-none d-lg-block" src="{{ monthlyTip.image }}" alt="ourlet">
						<div class="textTip d-flex flex-column align-items-start p-2">
							<h3 class="monthlyTitle p-0">{{ monthlyTip.name }}</h3>
							<p class="textMonthly">{{ monthlyTip.content }}</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<section>
		<div class="row mb-4">
			{% for tip in tips %}
				<div class="col-md-3 d-flex justify-content-around mt-4">
					<figure class="card h-75 w-75">
						<img src="{{ tip.image }}" class="card-img-top img-fluid h-50  px-1 pt-1 bg-primary" alt="{{ tip.name }}">
						<div class="card-body bg-primary">
							<h3 class="card-title text-dark my-4 d-flex justify-content-center">{{ tip.name }}</h3>
							<a href="/astuces/?id={{ tip.id }}" class="btn w-75 text-light bg-secondary position-absolute bottom-0 ms-4 mb-3">DÃ©couvrir</a>
						</figure>
					</div>
				{% endfor %}
			</section>
		{% endblock %}
