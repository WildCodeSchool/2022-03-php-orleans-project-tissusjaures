{% extends 'layout.html.twig' %}
{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/tips.css">
{% endblock %}
{% block content %}
	<div class="container">
		<div class="row my-5 d-flex flex-column align-items-center justify-content-center">
			<div class="monthlyTip p-0  bg-primary w-100">
				<div class="d-flex justify-content-center">
					<h1 class="title-tip mt-3 mb-4 w-50 d-flex justify-content-center text-light">{{ tip.name }}</h1>
				</div>
				<div class="d-flex justify-content-center ms-4">
					<img class="img-tip me-4 p-2" src="{{ tip.image }}" alt="{{ tip.name }}">
					<div class="textTip d-flex justify-content-start align-items-center p-2">
						<p class="textMonthly">{{ tip.content }}</p>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
