{% extends 'layout.html.twig' %}
{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/tutorials.css">
{% endblock %}
{% block content %}
<div class="container-fluid d-flex justify-content-center align-items-center header">
	<h1 class="text-light">Tutoriels</h1>
</div>
<div class="container categories mt-3">
		<div class="row justify-content-center">
			{% for tipCategory in tipCategories %}
				<div class="col-lg-3 mt-1 w-25">
					<a href='{{ tipCategory.link }}' class="btn btn-lg w-100 m-1 bg-primary categories">{{ tipCategory.name }}</a>
				</div>
			{% endfor %}
		</div>
</div>
<div class="container cards-products mt-3">
	<section id="products">
		<div class="row">
			{% for tutorial in tutorials %}
				<div class="col-lg-3 mb-2 mx-auto">
					<figure class="card h-100">
						<img src="{{tutorial.image}}" class="card-img-top" alt="{{ tutorial.name }}">
						<div class="card-body bg-primary">
							<h5 class="card-title text-dark">{{ tutorial.name }}</h5>
                            <a href="/tutoriels?id={{tutorial.id}}"class="btn text-light bg-secondary position-absolute bottom-0 end-0 m-2">DÃ©couvrir</a>
						</div>
					</figure>
				</div>
			{% endfor %}
		</div>
	</section>
</div>
{% endblock %}
