{% extends 'layout.html.twig' %}
{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/products.css">
{% endblock %}
{% block content %}
	<div class="container-fluid mb-4 d-flex justify-content-center align-items-center header">
		<h1 class="text-light">Nos produits</h1>
	</div>
	<div class="container cards-products mt-3">
		<section id="products">
			<div class="row mb-4">
				<div class="col-lg-12 d-flex justify-content-center">
					<div class="title bg-secondary py-2 px-3">
						<h2 class="text-center text-light mt-3">Catégories
						</h2>
					</div>
				</div>
			</div>
			<div class="row justify-content-end">
				<div class="col-lg-4 mb-3">
					<form type="hidden" class="input-group w-100" method="GET" action="/produits/chercher">
						<input type="search" name="search" class="form-control search rounded w-25 bg-light text-dark" placeholder="Rechercher" aria-label="Search" aria-describedby="search"/>
						<button class="input-group-btn search-btn bg-primary btn-lg rounded border-0 ms-1" id="search">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewbox="0 0 16 16">
								<path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
							</svg>
						</button>
					</form>
				</div>
				<div class="row justify-content-center mb-4">
					{% for clothCategory in clothCategories %}
						<div class="col-lg-3 mb-3">
							<figure class="card h-100">
								<img src="https://picsum.photos/id/535/200/150" class="card-img-top px-1 pt-1 bg-primary" alt="{{ cloth.name }}">
								<div class="card-body bg-primary">
									<h5 class="card-title text-dark mb-5 text-center">{{ clothCategory.name }}</h5>
									<a href="/tissus/categorie?id={{ clothCategory.id }}" class="btn w-75 text-light bg-secondary position-absolute bottom-0 ms-4 mb-3">Découvrir</a>
								</figure>
							</div>
						{% endfor %}
						{% for machineCategory in machineCategories %}
							<div class="col-lg-3 mb-3">
								<figure class="card h-100">
									<img src="https://picsum.photos/id/885/200/150" class="card-img-top px-1 pt-1 bg-primary" alt="{{ machine.name }}">
									<div class="card-body bg-primary">
										<h5 class="card-title text-dark text-center mb-5">{{ machineCategory.name }}</h5>
										<a href="/machines" class="btn w-75 text-light bg-secondary position-absolute bottom-0 ms-4 mb-3">Découvrir</a>
									</figure>
								</div>
							{% endfor %}
						</div>
					</section>
				</div>
			{% endblock %}
