{% extends 'layout.html.twig' %}
{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/lexicon.css">
{% endblock %}
{% block content %}
	<div class="container-fluid p-0">
		<div class="container-fluid d-flex justify-content-center align-items-center header">
			<h1 class="text-light text-center">Lexique</h1>
		</div>
		<div class="mt-3">
			<div class="row justify-content-center m-0">
				{% for tipCategory in tipCategories %}
					<div class="col-lg-4 mt-1 categories">
						<a href='{{ tipCategory.link }}' class="btn btn-lg w-100 m-1 {% if tipCategory.name is same as 'Lexique' %} bg-secondary text-light {% else %} bg-primary {% endif %}">{{ tipCategory.name }}</a>
					</div>
				{% endfor %}
			</div>
		</div>
		<div class="row mt-3 m-0 d-flex flex-column align-items-center justify-content-center">
			<div class="lexiconContent p-3  bg-primary w-75">
				{% for lexicon in lexicons %}
					<div class="text-dark d-flex flex-column">
						<span class="lexicon fw-bold text-secondary">{{ lexicon.name }} :</span>
						<p>{{ lexicon.definition }}</p>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
