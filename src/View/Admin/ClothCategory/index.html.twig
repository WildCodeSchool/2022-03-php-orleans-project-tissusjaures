{% extends 'adminLayout.html.twig' %}
{% block title %}
	{{ parent() }}
	- Liste des catégories de tissus
{% endblock %}
{% block content %}
<div class="container d-flex flex-column align-items-end mx-auto">
  <div class="d-flex col-8 flex-column align-self-center mt-3 align-items-start">
	<h2 class="addClothTitle mb-0">Catégories de tissus</h2>
		<a href="/admin/categories-tissus/ajouter" class="mt-0 btn d-flex btn-lg justify-content-around align-items-center align-self-center">
			<svg class="adminSvg" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
  						<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
  						<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
			</svg>Ajouter</a>
  </div>
	<ul class="list-group col-8 mx-auto mt-1">	
	{% for clothCategory in clothCategories %}		
			<li class="list-group-item py-1 px-2 my-1 border-0 bg-primary text-dark shadow-sm d-flex justify-content-between align-items-center">{{ clothCategory.name }}
				<div class="d-flex">
					<a class="btn d-flex btn-md justify-content-end align-items-center my-1 mx-2" href="/admin/tissus/editer?id={{ clothCategory.id }}">
							<svg class="adminSvg" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-dash-circle" viewBox="0 0 16 16">
  								<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
  								<path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z"/>
							</svg>Éditer
					</a>
					<form action="/admin/tissus/supprimer" method="POST">
        			<input type="hidden" name="id" value="{{ clothCategory.id }}">
        				<button class="btn d-flex btn-md justify-content-around align-items-center align-self-center my-1">
							<svg class="adminSvg" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-dash-circle" viewBox="0 0 16 16">
  								<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
  								<path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z"/>
							</svg>Supprimer
						</button>
    				</form>
				</div>
			</li>	
	{% endfor %}
	</ul>
</div>
{% endblock %}