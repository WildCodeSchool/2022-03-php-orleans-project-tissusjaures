{% if errors is not empty %}
	<div class="alert alert-danger col-8 col-md-6 mx-auto text-center mt-2">
		{% for error in errors %}
			<div>{{error}}</div>
		{% endfor %}
	</div>
{% endif %}
<h2 class="addLexiconTitle col-8 col-md-6 mx-auto text-center">{{ title_name|default('Ajouter une d√©finition')}}</h2>
<div class="container">
	<form method="POST" enctype="multipart/form-data">
		<div class="form-row">
			<div class="form-group col-8 col-md-6 mx-auto">
				<label for="name">Nom</label>
				<input type="text" class="form-control" value="{{ lexicon.name }}" id="name" name="name" placeholder="Faire du papier peint">
			</div>
			<div class="form-group col-8 col-md-6 mx-auto">
				<label for="description">Description</label>
				<input type="text" class="form-control" value="{{lexicon.description}}"id="description" name="description" placeholder="Prenez une feuille, de la colle et assemblez le tout sur un mur">
			</div>
			<div class="form-group col-8 col-md-6 mx-auto">
				<button type="submit" class="d-flex justify-content-around align-items-center btn btn-md">
				{% autoescape false %}
				{{ button_name|default('<svg class="adminSvg" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
  					<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
  					<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
				</svg> Ajouter')}}
				{% endautoescape %}
				</button>
			</div>
		</div>
	</form>
</div>