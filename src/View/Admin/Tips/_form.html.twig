{% if errors is not empty %}
	<div class="alert alert-danger col-8 col-md-6 mx-auto text-center mt-2">
		{% for error in errors %}
			<div>{{error}}</div>
		{% endfor %}
	</div>
{% endif %}
<h2 class="addClothTitle col-8 col-md-6 mx-auto text-center">{{ title_name|default('Ajouter une astuce')}}</h2>
<div class="container">
	<form method="POST" enctype="multipart/form-data">
		<div class="form-row">
			<div class="form-group col-8 col-md-6 mx-auto">
				<label for="name">Nom</label>
				<input type="text" class="form-control" value="{{ tip.name }}" id="name" name="name" placeholder="Tissu rose">
			</div>
			<div class="form-group col-8 col-md-6 mx-auto">
				<label for="image">Image</label>
				<input type="file" class="form-control" value="{{ clothCategory.image }}" id="image" name="image">
			</div>
			<div class="form-group col-8 col-md-6 mx-auto">
				<label for="tipDescription" class="form-label">Description</label>
  				<textarea class="form-control" id="tipDescription" rows="3"></textarea>
			</div>
			<form action="POST" input="hidden" name="tips_and_tricks_categories_id" value="1"></form>
				<button type="submit" class="d-flex justify-content-around align-items-center btn btn-md">
				<svg class="adminSvg" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
  					<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
  					<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
				</svg>
				{{ button_name|default('Ajouter')}}
				</button>
		</div>
	</form>
</div>