{% extends 'adminLayout.html.twig' %}
{% block title %}
	{{ parent() }}
	- Liste des tissus
{% endblock %}
{% block content %}
<div class="container d-flex flex-column align-items-end mx-auto">
  <div class="d-flex col-8 justify-content-between align-self-center mt-3 align-items-center">
	<h2 class="addClothTitle mb-4">Tissus</h2>
		<a href="/admin/cloth/add" class="btn d-flex btn-md justify-content-around align-items-center align-self-end">
		<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
  					<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
  					<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
		</svg>Ajouter</a>
  </div>
	<ul class="list-group col-8 mx-auto mt-1">
		{% for clothItem in clothItems %}
    <a href="/admin/cloth/edit?id= {{ clothItem.id }}"
		<li class="list-group-item my-1 border-0 bg-primary text-dark shadow-sm">{{ clothItem.name }}</li>
    </a>
		{% endfor %}
	</ul>
</div>{% endblock %}
