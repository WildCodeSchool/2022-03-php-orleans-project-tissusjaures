{% extends 'adminLayout.html.twig' %}

{% block content %}
	{% if errors is not empty %}
		<div class="container">
			{% for error in errors %}
				<div>{{error}}</div>
			{% endfor %}
		</div>
	{% endif %}

	<div class="container">
		<form method="POST" enctype="multipart/form-data">
			<div class="form-row mx-auto">
				<div class="form-group col-md-6">
					<label for="inputEmail4">Nom</label>
					<input type="text" class="form-control" value="{{ clothItems.name }}" id="name" name="name" placeholder="Tissu rose">
				</div>
				<div class="form-group col-md-6">
					<label for="inputPassword4">Prix</label>
					<input type="number" step = "0.1" class="form-control" value="{{ clothItems.price }}" id="price" name="price" placeholder="30">
				</div>
			</div>
			<div class="form-group">
				<label for="inputAddress2">Image</label>
				<input type="file" class="form-control-file" value="{{ clothItems.image }}" id="image" name="image">
			</div>
			<div class="form-row">
				<div class="form-check-inline">
					<input class="form-check-input" type="checkbox" value="{{ clothItems.is_on_sale }}" id="promo" name="is_on_sale">
					<label class="form-check-label" for="promo">
						En promo
					</label>
				</div>
				<div class="form-row">
					<div class="form-check-inline">
						<input class="form-check-input" type="checkbox" value="{{ clothItems.is_new }}" id="new" name="is_new">
						<label class="form-check-label" for="new">
							Nouveau
						</label>
					</div>
					<div class="form-group col-md-4">
						<label for="inputState">Cat√©gorie</label>
						<select name="cloth_categories_id"  id="inputState" class="form-control">	
              {% for category in categories %}		
								<option value="{{ category.id }}">{{ category.name }}</option>
							{% endfor %}
						</select>
					</div>
					<button type="submit" class="btn btn-primary">Ajouter</button>
				</form>
			</div>
		{% endblock %}
