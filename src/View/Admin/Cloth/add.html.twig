{% extends 'adminLayout.html.twig' %}

{% block content %}
{% if error is not empty %}
<div class="alert alert-danger">
		{% for error in errors %}
			<div>{{error}}</div>
		{% endfor %}
</div>

{% endif %}
<div class = "container">
<form>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Nom</label>
      <input type="text" class="form-control" id="name" placeholder="Name">
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Prix</label>
      <input type="number" class="form-control" id="price" placeholder="30">
    </div> 
  </div>
  <div class="form-group">
    <label for="inputAddress2">Image</label>
    <input type="file" class="form-control-file" id="image">
  </div>
  <div class="form-row">
    <div class="form-check-inline">
  <input class="form-check-input" type="checkbox" value="" id="promo" name ="is_on_sale">
  <label class="form-check-label" for="promo">
    En promo
  </label>
</div>
<div class="form-row">
    <div class="form-check-inline">
  <input class="form-check-input" type="checkbox" value="" id="new" name ="is_new">
  <label class="form-check-label" for="new">
    Nouveau produit
  </label>
</div>
    <div class="form-group col-md-4">
      <label for="inputState">Cat√©gorie</label>
      <select id="inputState" class="form-control">
      {% for category in categories %}
        <option value = {{ category.id }}>{{ category.name }}</option>
      {% endfor %}
      </select>
    </div>
  <button type="submit" class="btn btn-primary">Add</button>
</form>
</div>
{% endblock %}