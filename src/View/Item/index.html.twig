{% extends 'layout.html.twig' %}
{% block stylesheet %}<link rel="stylesheet" href="/assets/css/products.css">
{% endblock %}
{% block content %}
	<div class="container-fluid header">
		<h1>Produits</h1>
	</div>
	<div class="container categories mt-4">
		<div class="row">
			{% for category in categories %}
				<div class="col-lg-4 mt-1 mx-auto">
					<button type="button" class="btn btn-lg m-1 categories">{{ category.name }}</button>
				</div>
			{% endfor %}
		</div>
	</div>
	<div class="container cards-products mt-4">
		<section id="products">
			<h2 class="d-flex justify-content-center mb-3">Nos produits
			</h2>
			<div class="row">
				{% for product in products %}
					<div class="col-lg-3 mb-2 mx-auto">
						<figure class="card h-100">
							<img src="https://picsum.photos/id/535/200/150" class="card-img-top" alt="">
							<div class="card-body">
								<h5 class="card-title">{{ product.name }}</h5>
								<div class="prix m-2">
									5 €</a>
							</div>
						</figure>
					</div>
				{% endfor %}
				{% for machine in machines %}
					<div class="col-lg-3 mb-2 mx-auto">
						<figure class="card h-100">
							<img src="https://picsum.photos/id/885/200/150" class="card-img-top" alt="">
							<div class="card-body">
								<h5 class="card-title">{{ machine.name }}</h5>
								<div class="prix m-2">
									100 €</a>
							</div>
						</figure>
					</div>
				{% endfor %}
			</div>
		</section>
	</div>
{% endblock %}
