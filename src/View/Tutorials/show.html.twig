{% extends 'layout.html.twig' %}
{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/tutorials.css">
{% endblock %}
{% block content %}
<div class="d-flex justify-content-center align-items-center header">
	<h1 class="text-light">Tutoriels</h1>
</div>
<div class="container w-60 d-flex flex-column align-items-center justify-content-around">
	<div class="w-100 mt-3 mx-auto p-0">
		<div class="row justify-content-center">
			{% for tipCategory in tipCategories %}
				<div class="col-lg-4 mt-1 categories">
					<a href='/{{ tipCategory.name|lower }}' class="btn btn-lg w-100 bg-primary m-1">{{ tipCategory.name }}</a>
				</div>
			{% endfor %}
		</div>
	</div>
	<div class="tutorial w-100 mx-auto bg-primary mt-3 p-2">
		<div class="d-flex justify-content-center">
			<h2 class="tutorialTitle text-center text-light bg-secondary px-4 py-2 mt-3 mb-2">{{tutorial.name}}</h2>
		</div>
		<img class="tutorialImg d-none d-md-block w-100 px-4 mt-1" src="{{tutorial.image}}" alt="{{tutorial.name}}">
		<div class="tutorialContent align-self-center py-4 px-4">{{tutorial.content}}
		</div>
	</div>
</div>
{% endblock %}
