{% extends 'layout.html.twig' %}
{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/tutorials.css">
{% endblock %}
{% block content %}
<div class="container-fluid d-flex justify-content-center align-items-center header">
	<h1 class="text-light">Tutoriels</h1>
</div>
<div class="row justify-content-center">
<div class="container mx-auto col-9 d-flex flex-column align-items-center">
<div class="container categories col-9 mt-3 mx-autp p-0">
	<div class="row justify-content-center">
		{% for tipCategory in tipCategories %}
			<div class="col-lg-4 px-1">
				<a href='/{{ tipCategory.name|lower }}' class="btn btn-lg w-100 m-1 bg-primary categories px-1">{{ tipCategory.name }}</a>
			</div>
		{% endfor %}
	</div>
	</div>

<div class="containerTutorial w-fit-content mx-auto bg-primary mt-2 p-2">
<div class="d-flex justify-content-center">
	<h2 class="tutorialTitle text-center text-light bg-secondary px-4 py-2">{{tutorial.name}}</h2>
	</div>
	<div class="row">
	<img class="tutorialImg d-none d-md-block" src="{{tutorial.image}}" alt="{{tutorial.name}}">
	<div class="tutorialContent align-self-center py-2 px-3 mx-auto">{{tutorial.content}}</div>
	</div>
		</div>
</div>
</div>
</div>
{% endblock %}
