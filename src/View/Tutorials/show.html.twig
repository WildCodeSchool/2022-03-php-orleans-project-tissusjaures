{% extends 'layout.html.twig' %}
{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/tutorials.css">
{% endblock %}
{% block content %}
<div class="container-fluid d-flex justify-content-center align-items-center header">
	<h1 class="text-light">Tutoriels</h1>
</div>
<div class="container categories mt-3">
	<div class="row justify-content-center">
		{% for tipCategory in tipCategories %}
			<div class="col-lg-3 mt-1 w-25">
				<a href='/tissus/categorie?id={{ tipCategory.id }}' class="btn btn-lg w-100 m-1 bg-primary categories">{{ tipCategory.name }}</a>
			</div>
		{% endfor %}
	</div>
</div>
<div class="container cards-products mt-3">
	<section id="products">
		<h2 class="d-flex justify-content-center text-dark mb-3">{{tutorial.name}}
		</h2>
		<div class="row">
		</div>
	</section>
</div>
{% endblock %}
